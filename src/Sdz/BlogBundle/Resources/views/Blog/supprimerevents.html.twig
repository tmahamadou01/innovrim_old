{% extends "SdzBlogBundle::layout.html.twig" %}

{% block title %}
	Supprimer un événement - {{ parent() }}
{% endblock %}

{% block sdz_blog_body %}
<div>
	<br><br>
<h2>Innov RIM</h2>
</div>
<p>Le Groupe des innovateurs en Mauritanie (IP Mauritanie)</p>
<hr/>
	<h2>Supprimer un Evénement</h2>
	<p>
		Etes-vous certain de vouloir supprimer l'événement "{{ events.titre }}" ?
	</p>
	{# On met l'id de l'evenement dans la route de l'action du formulaire #}
	<form action="{{ path('sdz_blog_supprimerevents', {'id': events.id}) }}" method="post">
		<a href="{{ path('sdz_blog_voirevents', {'id': events.id}) }}" class="btn">
		<i class="icon-chevron-left"></i>
			Retour à l'événement
		</a>
		<input type="submit" value="Supprimerevents" class="btn btn-danger" />
	{{ form_rest(form) }}
	</form>
{% endblock %}
