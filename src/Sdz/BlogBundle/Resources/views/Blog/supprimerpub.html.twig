{% extends "SdzBlogBundle::layout.html.twig" %}

{% block title %}
	Supprimer une publication - {{ parent() }}
{% endblock %}

{% block sdz_blog_body %}
	<h2>Supprimer une publication</h2>
	<p>
		Etes-vous certain de vouloir supprimer la publication "{{ publication.titre }}" ?
	</p>
	{# On met l'id de l'article dans la route de l'action du formulaire #}
	<form action="{{ path('sdz_blog_supprimerpub', {'id': publication.id}) }}" method="post">
		<a href="{{ path('sdz_blog_voirpub', {'id': publication.id}) }}" class="btn">
		<i class="icon-chevron-left"></i>
			Retour Ã  l'article
		</a>
		<input type="submit" value="Supprimer" class="btn btn-danger" />
	{{ form_rest(form) }}
	</form>
{% endblock %}
